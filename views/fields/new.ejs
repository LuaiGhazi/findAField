<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Field</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/fields" method="POST" novalidate class='validated-form'>
            <div class="mb-3">
                <label class="form-label" for="title">Title </label>
                <input class="form-control" type="text" id="title" name="field[title]" required>
                <!-- Following message will show when
            the form is filled correctly -->
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location </label>
                <input class="form-control" type="text" id="location" name="field[location]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="field[image]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class='mb-3'>
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input class="form-control" type="text" id=price placeholder="0.00" aria-label='price'
                        aria-describedby="price-label" name='field[price]' required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="field[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Publish Field</button>
            </div>
        </form>
    </div>
</div>